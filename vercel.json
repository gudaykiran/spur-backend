{
    "version": 2,
    "buildCommand": "npm run build",
    "env": {
        "DATABASE_URL": {
            "description": "PostgreSQL database connection string"
        },
        "CLAUDE_API_KEY": {
            "description": "Anthropic Claude API key"
        },
        "REDIS_URL": {
            "description": "Redis connection URL (optional)"
        },
        "NODE_ENV": {
            "default": "production"
        }
    },
    "functions": {
        "src/server.ts": {
            "memory": 1024,
            "maxDuration": 60
        }
    }
}