{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.ts",
            "use": "@vercel/node",
            "config": {
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, POST, PUT, DELETE, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type, Authorization, X-Requested-With, Accept"
                },
                {
                    "key": "Access-Control-Max-Age",
                    "value": "86400"
                }
            ]
        }
    ],
    "routes": [
        {
            "src": "^/health/?$",
            "dest": "/api/health.ts"
        },
        {
            "src": "^/test/?$",
            "dest": "/api/test.ts"
        },
        {
            "src": "^/api/chat/?$",
            "dest": "/api/chat.ts"
        },
        {
            "src": "^/api/migrate/?$",
            "dest": "/api/migrate.ts"
        }
    ]
}